{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "h", "cc", "cpp", "c++"],
            "rootPatterns": [".git/", ".ccls", "compile_commands.json"],
            "initializationOptions": {
                "directory": "/tmp/ccls"
            }
        },
        "teal": {
            "host":"127.0.0.1",
            "port": 9527,
            "filetypes": ["tl", "teal"],
            "rootPatterns": [".git/"]
        }
    },
    "diagnostic.enable": true,
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextCurrentLineOnly": false,
    "diagnostic.virtualTextLevel": "information",
    "diagnostic.signLevel": "warning",
    "codeLens.enable": true,
    "codeLens.subseparator": " | ",
    "[rust][python][svelte][markdown][typescript][typescriptreact][html]": {
        "coc.preferences.formatOnSave": true
    },
    "coc.preferences.maxFileSize": "10MB",
    "signature.hideOnTextChange": false,
    "Lua.workspace.library": {
        "/usr/share/nvim/runtime/lua": true,
        "/usr/share/nvim/runtime/lua/vim/lsp": true,
        "/home/xandaros/.config/nvim/bundle/nvim-treesitter/lua": true
    },
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.pydocstyleEnabled": true,
    "suggest.languageSourcePriority": 99,
    "suggest.defaultSortMethod": "length",
    "suggest.noselect": true,
    "suggest.enablePreselect": false,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length", "120"],
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.stubPath": "typings",
    "rust-analyzer.diagnostics.enable": true,
    "rust-analyzer.inlayHints.enable": true,
    "rust-analyzer.checkOnSave.enable": true,
    "rust-analyzer.checkOnSave.command": "clippy",
    "svelte.enable-ts-plugin": true,
    "kotlin.indexing.enabled": true,
    "kotlin.languageServer.enabled": true,
    "kotlin.completion.snippets.enabled": true
}
